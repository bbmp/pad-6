<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_layout_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="12px"
            android:text="@string/device_model_health_hot_oil_text"
            android:textColor="#ffffff"
            android:textSize="34px" />


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginTop="6px"
            android:layout_alignParentRight="true"
            android:padding="16px"
            android:src="@mipmap/img_back_oil" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="5px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="22px" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_model_current_text"
            android:textColor="#ffffff"
            android:textSize="22px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_head_current_text"
            android:textColor="#ffffff"
            android:textSize="22px" />

        <TextView
            android:id="@+id/which_stove_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="22px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_temp_good_text"
            android:textColor="#ffffff"
            android:textSize="22px" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="22px" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:background="@mipmap/health_oil_heat_bg">

        <com.robam.rokipad.view.ProgressCircle
            android:id="@+id/progress"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp" />

    </RelativeLayout>


</LinearLayout>
