<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360px"
    android:layout_height="72px"
    android:layout_marginTop="3px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_layout_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/setting_model_user_nickname_text"
            android:textColor="@color/white"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_marginTop="34px"
            android:gravity="center"
            android:text="@string/setting_model_def_phone_text"
            android:textColor="#888888"
            android:textSize="20px" />

        <TextView
            android:id="@+id/tv_delete_control_power"
            android:layout_width="95px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_marginTop="12px"
            android:gravity="center"
            android:background="@drawable/shape_item_bg"
            android:layout_centerHorizontal="true"
            android:text="@string/setting_model_delete_control_power_text"
            android:textColor="@color/white"
            android:textSize="24px" />


    </RelativeLayout>

</RelativeLayout>