<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_zuo_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextClock
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:textColor="#ffffff"
        android:textSize="22px" />

    <ImageView
        android:id="@+id/wifi_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:src="@mipmap/ic_wifi_cloce" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_portrait"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_not_login" />


            <TextView
                android:id="@+id/login_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_person"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="@string/setting_model_please_login_text"
                android:textColor="#666666"
                android:textSize="16px" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_back" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iv_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/iv_home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_home_smiling_face" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iv_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_setting" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
