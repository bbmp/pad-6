<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2.7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cur_step_image"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_layout_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_device_dc"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cook_device_fire_text"
                    android:textSize="20px"/>

                <TextView
                    android:id="@+id/tv_stove_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="P3"
                    android:textColor="#dd8735"
                    android:textSize="20px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cook_device_temp_text"
                    android:textSize="20px"/>

                <TextView
                    android:id="@+id/tv_pot_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="P3"
                    android:textColor="#dd8735"
                    android:textSize="20px"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/cook_device_volume_text"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/tv_fan_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="爆炒"
                    android:textColor="#dd8735"
                    android:textSize="20px"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#50666666"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/cook_adjust_device_text"
                android:textColor="#666666"
                android:textSize="20px"/>

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_cur_step_recipe_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_weight="3.8">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_surplus_recipe_step_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

    </FrameLayout>

</LinearLayout>