<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_card_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_pot_add_device"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="24px"
        android:gravity="left"
        android:text="@string/device_pot_add_descriptions"
        android:textColor="@color/white"
        android:textSize="26px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="14px"
            android:gravity="left|center"
            android:text="@string/device_pot_add_desc_front"
            android:textColor="#fffefe"
            android:textSize="24px" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="14px"
            android:src="@mipmap/ic_distribution_network" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14px"
            android:gravity="left|center"
            android:text="@string/device_pot_add_desc_center"
            android:textColor="#fffefe"
            android:textSize="24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginStart="24px"
            android:gravity="left|center"
            android:text="@string/device_pot_add_desc_center2"
            android:textColor="#fffefe"
            android:textSize="24px" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_distribution_network" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/device_pot_add_desc_after"
            android:textColor="#fffefe"
            android:textSize="24px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:gravity="left|center"
        android:text="@string/device_pot_add_desc_succeed"
        android:textColor="#fffefe"
        android:textSize="24px" />

</LinearLayout>
