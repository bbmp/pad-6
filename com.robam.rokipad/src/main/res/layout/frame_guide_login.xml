<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_login_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#33303237">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="130px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="34px" />

        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#3468d3"
            android:textSize="30px" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="跳过"
            android:textColor="#666666"
            android:textSize="34px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">

        <LinearLayout
            android:id="@+id/mobile"
            android:layout_width="420px"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:background="@drawable/wifi_pad_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPhone_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:ems="14"
                android:hint="@string/enter_phone"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:textColorHighlight="@color/Black"
                android:textColorHint="#666666"
                android:textColorLink="@color/Black"
                android:textSize="26px" />

        </LinearLayout>

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@id/mobile"
            android:text="请输入有效的手机号"
            android:textColor="@color/red"
            android:textSize="20px"
            android:visibility="invisible" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_pwd_login"
        android:layout_width="420px"
        android:layout_height="80px"
        android:layout_marginTop="16px"
        android:background="@drawable/wifi_pad_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtPwd_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/c20"
            android:textColorHint="#666666"
            android:textSize="26px">

        </EditText>


        <ImageView
            android:id="@+id/eye_btn"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/eye_close" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_phone_login"
        android:layout_width="420px"
        android:layout_height="80px"
        android:layout_marginTop="16px"
        android:visibility="gone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_code"
            android:layout_width="224px"
            android:layout_height="80px"
            android:background="@drawable/wifi_pad_bg"
            android:gravity="center"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textColorHint="#666666"
            android:textColorLink="@color/Black"
            android:textSize="26px" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/send_code"
            android:layout_width="180px"
            android:layout_height="80px"
            android:background="@drawable/wifi_pad_bg"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#666666"
            android:textSize="26px" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/login"
        android:layout_width="420px"
        android:layout_height="56px"
        android:layout_marginTop="32px"
        android:background="@drawable/wifi_pad_bg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="30px" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="420px"
        android:layout_height="56px"
        android:layout_marginTop="24px"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/two_code_show" />

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:text="二维码登录"
            android:textColor="#3468d3"
            android:textSize="26px" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:src="@mipmap/ic_line_f" />

        <TextView
            android:id="@+id/tv_login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机登录"
            android:textColor="#3468d3"
            android:textSize="26px" />


    </LinearLayout>


</LinearLayout>