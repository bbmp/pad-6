<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_device_notice_dialog_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingRight="27dp">

        <ImageView
            android:id="@+id/imgTip"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="21dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_notic_tip1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/kitchenFault"
            android:textColor="@color/White"
            android:textSize="29sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnlButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="30dp"
        android:background="@color/White"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#5593fb"
            android:textSize="31sp" />
    </LinearLayout>

</LinearLayout>