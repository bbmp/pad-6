<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="400px"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12px"
        android:layout_marginBottom="12px">

        <com.robam.rokipad.view.RoundImageView
            android:id="@+id/img_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_radius"
            android:scaleType="fitXY" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="372px"
        android:layout_height="match_parent"
        android:layout_marginLeft="12px"
        android:layout_marginTop="12px"
        android:layout_marginBottom="12px"
        android:background="@drawable/shape_layout_bg">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="30px" />


        <LinearLayout
            android:id="@+id/ll_eye"
            android:layout_width="wrap_content"
            android:layout_height="38px"
            android:layout_below="@id/recipe_title"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/eye_look" />


            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="26px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_below="@+id/ll_eye"
            android:layout_marginTop="10px"
            android:background="#10FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/time_img" />

                <TextView
                    android:id="@+id/time_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/simple_img" />

                <TextView
                    android:id="@+id/simple_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/taste_img" />

                <TextView
                    android:id="@+id/taste_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="24px" />

            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list"
            android:layout_marginTop="5px">

            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:ellipsize="end"
                android:ems="18"
                android:gravity="top"
                android:lineSpacingExtra="8px"
                android:maxLines="6"
                android:text=""
                android:textColor="#888888"
                android:textSize="26px" />

        </FrameLayout>


        <RelativeLayout
            android:id="@+id/recipe_detail"
            android:layout_width="170px"
            android:layout_height="48px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43px"
            android:background="@drawable/button_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="菜谱详情"
                android:textColor="#ffffff"
                android:textSize="28px" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="372px"
        android:layout_height="match_parent"
        android:layout_marginLeft="12px"
        android:layout_marginTop="12px"
        android:layout_marginRight="12px"
        android:layout_marginBottom="12px"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout_bg">

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="制作主料"
                    android:textColor="#888888"
                    android:textSize="30px" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/main_title"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:background="#666666" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recyc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_layout_bg">

                <TextView
                    android:id="@+id/two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="制作调料"
                    android:textColor="#888888"
                    android:textSize="30px" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/two_title"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:background="#666666" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/second_recyc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/line2"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
