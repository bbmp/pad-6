<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68px"
    android:background="@drawable/common_view_background_selector">

    <LinearLayout
        android:id="@+id/pnlLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/img_wifi_connected"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtSsid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/wifiHasNoName"
            android:textColor="@color/wifititlecolor"
            android:textSize="25px" />

        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginRight="20px"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/wifilock" />

        <ImageView
            android:id="@+id/imgWifi"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginRight="80px"
            android:contentDescription="@null"
            android:src="@mipmap/ic_wifi" />
    </LinearLayout>

</RelativeLayout>