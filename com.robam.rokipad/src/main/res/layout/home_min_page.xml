<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:gravity="center"
            android:text="当前极简模式"
            android:textColor="#FFFFFF"
            android:textSize="30px" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="2px"
            android:gravity="center"
            android:orientation="horizontal">


            <TextClock
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="34px" />


            <ImageView
                android:id="@+id/iv_wifi_state"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="16px"
                android:src="@mipmap/ic_wifi_cloce" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:layout_marginTop="135px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fan_light"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="117px"
            android:src="@mipmap/fan_min_light_normal" />

        <ImageView
            android:id="@+id/fan_small"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="148px"
            android:src="@mipmap/fan_min_small_normal" />

        <ImageView
            android:id="@+id/fan_middle"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="148px"
            android:src="@mipmap/fan_min_middle_normal" />

        <ImageView
            android:id="@+id/fan_big"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="148px"
            android:src="@mipmap/fan_min_big_normal" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82px">

        <TextView
            android:id="@+id/tv_clean_lock"
            android:layout_width="260px"
            android:layout_height="56px"
            android:layout_centerInParent="true"
            android:background="@mipmap/img_clean_lock"
            android:gravity="center"
            android:text="开启清洗锁定"
            android:textColor="#FFFFFF"
            android:textSize="30px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10px"
        android:layout_marginBottom="10px"
        android:padding="20px"
        android:text="@string/setting_exit_min_model"
        android:textColor="#5C91FF"
        android:textSize="30px" />


</RelativeLayout>