<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_fan_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="294px"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            android:layout_marginTop="12px"
            android:background="@drawable/shape_layout_bg">

            <ImageView
                android:id="@+id/recipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:src="@mipmap/img_default" />

            <TextView
                android:id="@+id/recipe_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="20px"
                android:text="智能菜谱"
                android:textColor="#ffffff"
                android:textSize="34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_all"
                android:layout_marginLeft="24px"
                android:text="跟着菜谱自动烹饪\n轻松秒变大厨"
                android:textColor="#666666"
                android:textSize="26px" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="556px"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            android:layout_marginTop="12px"
            android:layout_marginRight="12px"
            android:background="@drawable/shape_layout_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fan_light"
                    android:layout_width="88px"
                    android:layout_height="88px"

                    android:src="@mipmap/fan_light_normal" />

                <ImageView
                    android:id="@+id/fan_small"
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:layout_marginLeft="40px"
                    android:src="@mipmap/fan_small_normal" />

                <ImageView
                    android:id="@+id/fan_middle"
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:layout_marginLeft="40px"
                    android:src="@mipmap/fan_middle_normal" />

                <ImageView
                    android:id="@+id/fan_big"
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:layout_marginLeft="40px"
                    android:src="@mipmap/fan_big_normal" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_light_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_light_anim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/ic_3d_bg" />

                <FrameLayout
                    android:id="@+id/fl_3d_explain"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="173dp"
                        android:layout_marginBottom="20dp"
                        android:src="@mipmap/ic_erect_line" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="173dp"
                        android:layout_marginBottom="20dp"
                        android:src="@mipmap/ic_erect_line" />

                    <TextView
                        android:id="@+id/tv_3d_wave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="17dp"
                        android:text="@string/device_fan_3d_wave_content"
                        android:textColor="@color/steelblue"
                        android:textSize="26px" />


                </FrameLayout>


                <FrameLayout
                    android:id="@+id/fl_3d_explain_not_wave"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="67px"
                    android:layout_marginRight="67px">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|right"
                        android:src="@mipmap/ic_erect_line" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|left"
                        android:src="@mipmap/ic_erect_line" />


                    <TextView
                        android:id="@+id/tv_3d_wave_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="16dp"
                        android:text="AI隔空智控功能未开启,前往智能设定开启"
                        android:textColor="@color/steelblue"
                        android:textSize="22px" />

                </FrameLayout>


            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_wave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="152px"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_clean_lock"
                    android:layout_width="200px"
                    android:layout_height="48px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="208px"
                    android:layout_marginRight="208px"
                    android:padding="1dp"
                    android:src="@mipmap/ic_clean_lock" />

                <ImageView
                    android:id="@+id/iv_3d_gesture_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="90dp"
                    android:src="@mipmap/icon_home_gesture" />


                <LinearLayout
                    android:id="@+id/ll_hover_startup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_fan_hover_text"
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_fan_startup_shutdown_text"
                        android:textColor="#666666"
                        android:textSize="26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_left_right_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/device_fan_left_wave_text"
                        android:textColor="@color/white"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/device_fan_left_wave_content"
                        android:textColor="#666666"
                        android:textSize="26px" />

                    <View
                        android:layout_width="40px"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/device_fan_right_wave_text"
                        android:textColor="@color/white"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/device_fan_right_wave_content"
                        android:textColor="#666666"
                        android:textSize="26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3d_gesture_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14px"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_fan_3d_wave_close_content"
                        android:textColor="@color/white"
                        android:textSize="26px" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_fan_wave_go"
                            android:textColor="@color/white"
                            android:textSize="26px" />

                        <TextView
                            android:id="@+id/tv_smart_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_fan_smart_set_content"
                            android:textColor="@color/app_blue"
                            android:textSize="26px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_fan_wave_open_feature_content"
                            android:textColor="@color/white"
                            android:textSize="26px" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_main_container"
            android:layout_width="294px"
            android:layout_height="match_parent"
            android:layout_marginTop="12px"
            android:layout_marginRight="12px"
            android:background="@drawable/shape_layout_bg"
            android:orientation="vertical">

            <include
                layout="@layout/pot_add_device_view"
                android:visibility="invisible" />

            <include
                layout="@layout/pot_img_view"
                android:visibility="invisible" />

            <include
                layout="@layout/pot_temp_view2"
                android:visibility="invisible" />

        </FrameLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_clean_lock_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/shape_layout_bg"
        android:visibility="gone">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:src="@mipmap/ic_clean_lock_dialog" />

            <TextView
                android:id="@+id/tv_content_text"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:gravity="center"
                android:text="@string/device_fan_clean_lock_content"
                android:textColor="@color/white"
                android:textSize="30px" />


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_marginLeft="350px"
                android:layout_marginTop="275dp"
                android:layout_marginRight="363px"
                android:background="@drawable/shape_item_oval_blue_bg"
                android:gravity="center"
                android:text="清洁完毕，返回主界面"
                android:textColor="@color/white"
                android:textSize="30px" />


            <!--            <TextView-->
            <!--                android:id="@+id/tv_close"-->
            <!--                android:layout_width="130dp"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_marginTop="270dp"-->
            <!--                android:layout_marginRight="400dp"-->
            <!--                android:background="@drawable/shape_item_oval_blue_bg"-->
            <!--                android:gravity="center"-->
            <!--                android:text="关 闭"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="20sp" />-->

        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>
