<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:zhy="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_add_device_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#4368D3"
                android:textSize="34px"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/dialog_device_add_select_desc_text"
                android:textColor="@color/white"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/tv_affirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_affirm_text"
                android:textColor="#4368D3"
                android:textSize="34px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="239px"
            android:gravity="center">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tfl_add_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="124px"
                android:layout_marginTop="22px"
                android:layout_marginBottom="6dp"
                zhy:max_select="1"/>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>