<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_add_device_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:layout_marginTop="9px"
                android:text="@string/cancel"
                android:textColor="#4368D3"
                android:textSize="28px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_affirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:gravity="center"
                android:layout_marginTop="9px"
                android:text="@string/dialog_affirm_text"
                android:textColor="#4368D3"
                android:textSize="28px" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#666666" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:gravity="center"
                android:text="时间"
                android:textColor="@color/gray"
                android:textSize="30px" />


            <FrameLayout
                android:layout_width="160px"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_marginRight="6dp">

                <com.robam.rokipad.ui.view.wheelview.LoopView
                    android:id="@+id/wheel_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_wheel_unit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:gravity="right"
                    android:text="时"
                    android:textColor="@color/white"
                    android:textSize="26px" />
            </FrameLayout>


        </FrameLayout>


    </LinearLayout>
</FrameLayout>