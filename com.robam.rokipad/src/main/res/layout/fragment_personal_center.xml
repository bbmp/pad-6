<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="235dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_layout_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_portrait_center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:src="@mipmap/ic_not_login"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lines="1"
                android:maxEms="9"
                android:text="我是昵称"
                android:textColor="@color/white"
                android:textSize="22px"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:gravity="center"
                android:lines="1"
                android:text="18757587705"
                android:textColor="@color/white"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_item_blue_bg"
                android:gravity="center"
                android:lines="1"
                android:text="@string/setting_model_login_text"
                android:textColor="@color/white"
                android:textSize="24px"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="200dp"
            android:layout_height="215dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_layout_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_device"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:src="@mipmap/ic_add_device"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:lines="1"
                android:maxEms="9"
                android:text="@string/setting_model_add_device"
                android:textColor="@color/menu_setting_model_select_text"
                android:textSize="18px"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12px"
        android:layout_marginBottom="12px"
        android:layout_marginRight="12px"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />


    </LinearLayout>


</LinearLayout>